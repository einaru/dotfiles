[user]
name = Einar Uvsl√∏kk
email = einar.uvslokk@gmail.com

[core]
editor = nvim
excludesfile = ~/.config/git/ignore
quotePath = false

[include]
path = ~/.gitconfig-local

[init]
defaultBranch = master

[pull]
ff = only

[merge]
tool = vimdiff

[color]
branch = auto
diff = auto
status = auto

[alias]
st = status -s
amend = commit --amend

b = branch

c = commit

co = checkout

# log commands
filelog = log -u
fl = log -u
ls = log --graph --oneline --decorate -n15
ll = log --graph --oneline --decorate

# reset commands
r = reset
r1 = reset HEAD^
r2 = reset HEAD^^
rh = reset --hard
rh1 = reset HEAD^ --hard
rh2 = reset HEAD^^ --hard

# list remotes
rem = "!git config -l | grep remote.*url | tail -n +2"

root = rev-parse --show-toplevel

update-submodules = submodule update --init --recursive

# Archiving
tar = ! "tar() { git archive --format tar --prefix=\"${PWD##*/}/\" HEAD -o ${1}; }; tar"
targz = ! "targz() { git archive --format tar.gz --prefix=\"${PWD##*/}/\" HEAD -o ${1}; }; targz"
zip = ! "zip() { git archive --format zip --prefix=\"${PWD##*/}/\" HEAD -o ${1}; }; zip"

todo = grep -n -e TODO -e FIXME -e XXX
