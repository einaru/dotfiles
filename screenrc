# See: https://wiki.archlinux.org/index.php/GNU_Screen#Tips_and_tricks

term screen-256color

startup_message off

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= G}[ %{G}%H %{g}][%= %{= w}%?%-Lw%?%{= R}%n*%f %t%?%{= R}(%u)%?%{= w}%+Lw%?%= %{= g}][ %{y}Load: %l %{g}][%{B}%Y-%m-%d %{W}%c:%s %{g}]'

vbell off

altscreen on
