import argparse

alphabet = 'abcdefghijklmnopqrstuvwxyzæøå'


def encrypt(n, plaintext):
    result = ''

    for l in plaintext.lower():
        try:
            i = (alphabet.index(l) + n) % len(alphabet)
            result += alphabet[i]
        except ValueError:
            result += l

    return result


def decrypt(n, ciphertext):
    result = ''

    for l in ciphertext:
        try:
            i = (alphabet.index(l) - n) % len(alphabet)
            result += alphabet[i]
        except ValueError:
            result += l

    return result


def parse_command_line():
    p = argparse.ArgumentParser()
    p.add_argument('text')
    p.add_argument('-n', '--rotation', metavar='N', type=int, default=12)
    p.add_argument('-d', '--decrypt', action='store_true')
    args = p.parse_args()
    return args


if __name__ == '__main__':
    args = parse_command_line()

    if args.decrypt:
        print(decrypt(args.rotation, args.text))
    else:
        print(encrypt(args.rotation, args.text))
